<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="nombre"
            android:ems="10"
            android:id="@+id/ediNomPaciente" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="historia medica"
            android:ems="10"
            android:id="@+id/editHistoria" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/ediNomPaciente" app:layout_constraintHorizontal_bias="0.503"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="medicamentos"
            android:ems="10"
            android:id="@+id/editMedicamentos" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/editHistoria" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancelar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="84dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/editMedicamentos"/>
    <Button
            android:text="guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_guardar" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/editMedicamentos" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="84dp"/>
</android.support.constraint.ConstraintLayout>